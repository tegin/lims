<odoo>
    <record model="ir.ui.view" id="lims_sample_template_form_view">
        <field name="name">lims.sample.template.form (in lims)</field>
        <field name="model">lims.sample.template</field>
        <field name="arch" type="xml">
            <form>
                <sheet>

                    <field name="name"/>
                    <field name="sample_type_id" />
                    <notebook>
                        <page name="products" string="Products">
                            <field name="product_ids" widget="many2many"/>
                        </page>
                        </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="lims_sample_template_tree_view">
        <field name="name">lims.sample.template.tree (in lims)</field>
        <field name="model">lims.sample.template</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="sample_type_id" />
            </tree>
        </field>
    </record>
     <record model="ir.actions.act_window" id="lims_sample_template_act_window">
        <field name="name">Template</field>
        <field name="res_model">lims.sample.template</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <record model="ir.ui.menu" id="lims_sample_template_menu">
        <field name="name">Template</field>
        <field name="parent_id" ref="lims_config_root" />
        <field name="action" ref="lims_sample_template_act_window" />
        <field name="sequence" eval="90" />
    </record>
</odoo>
