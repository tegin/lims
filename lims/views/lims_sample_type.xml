<odoo>
    <record model="ir.ui.view" id="lims_sample_type_form_view">
        <field name="name">lims.sample.type.form (in lims)</field>
        <field name="model">lims.sample.type</field>
        <field name="arch" type="xml">
            <form>
                <header />
                <sheet>
                    <widget
                        name="web_ribbon"
                        text="Archived"
                        bg_color="bg-danger"
                        attrs="{'invisible': [('active', '=', True)]}"
                    />
                    <field name="active" invisible="1" />
                    <group>
                        <field name="name" />
                        <field name="description" />
                        <field name="hazardous" />
                    </group>
                </sheet>
                <div class="oe_chatter" />
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="lims_sample_type_search_view">
        <field name="name">lims.sample.type.search (in lims)</field>
        <field name="model">lims.sample.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" />
                <field name="description" />
                <filter
                    name="hazardous"
                    domain="[('hazardous', '=', 1)]"
                    string="Hazardous"
                />
                <separator />
                <filter
                    name="archived"
                    domain="[('active', '=', False)]"
                    string="Archived"
                />
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="lims_sample_type_tree_view">
        <field name="name">lims.sample.type.tree (in lims)</field>
        <field name="model">lims.sample.type</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="hazardous" />
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="lims_sample_type_act_window">
        <field name="name">Sample Type</field>
        <!-- TODO -->
        <field name="res_model">lims.sample.type</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <record model="ir.ui.menu" id="lims_sample_type_menu">
        <field name="name">Sample Type</field>
        <field name="parent_id" ref="lims_config_root" />
        <field name="action" ref="lims_sample_type_act_window" />
        <field name="sequence" eval="80" />
    </record>
</odoo>
