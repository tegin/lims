<odoo>
    <record model="ir.ui.view" id="lims_sample_form_view">
        <field name="name">lims.sample.form (in lims)</field>
        <field name="model">lims.sample</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="receive_sample_action"
                        type="object"
                        string="Receive"
                        states="due"
                    />
                    <field name="state" widget="statusbar" readonly="1" />
                </header>
                <sheet>
                    <div name="button_box" class="oe_button_box" />
                    <h1>
                        <label for="identifier" />
                        <field name="identifier" />
                    </h1>
                    <group>
                        <group>
                            <field name="customer_id" />
                            <field
                                name="company_id"
                                groups="base.group_multi_company"
                            />
                            <field name="sample_date" />
                            <field name="progress" widget="progressbar" />
                        </group>
                        <group>
                            <field name="sample_type_id" />
                            <field name="received_date" />
                            <field name="priority" />
                        </group>
                    </group>
                    <notebook>
                        <page name="analysis" string="Analysis">
                            <field name="analysis_ids" />
                        </page>
                        <page name="interpretation" string="Interpretation">
                            <field name="interpretation" />
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers" />
                    <field name="activity_ids" widget="mail_activity" />
                    <field name="message_ids" widget="mail_thread" />
                </div>
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="lims_sample_search_view">
        <field name="name">lims.sample.search (in lims)</field>
        <field name="model">lims.sample</field>
        <field name="arch" type="xml">
            <search>
                <field name="identifier" />
                <field name="sample_type_id" />
                <field name="sample_date" />
                <field name="customer_id" />
                <field name="company_id" groups="base.group_multi_company" />
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="lims_sample_tree_view">
        <field name="name">lims.sample.tree (in lims)</field>
        <field name="model">lims.sample</field>
        <field name="arch" type="xml">
            <tree>
                <!-- TODO -->
                <field name="identifier" />
                <field name="sample_type_id" />
                <field name="sample_date" />
                <field name="customer_id" />
                <field name="company_id" groups="base.group_multi_company" />
                <field name="progress" widget="progressbar" />
                <field name="state" />
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="lims_sample_act_window">
        <field name="name">Lims Sample</field>
        <!-- TODO -->
        <field name="res_model">lims.sample</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
    <record model="ir.ui.menu" id="lims_sample_menu">
        <field name="name">Sample</field>
        <field name="parent_id" ref="lims_sample_root" />
        <!-- TODO -->
        <field name="action" ref="lims_sample_act_window" />
        <field name="sequence" eval="16" />
        <!-- TODO -->
    </record>
</odoo>
