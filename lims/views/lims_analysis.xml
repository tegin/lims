<odoo>
    <record model="ir.ui.view" id="lims_analysis_form_view">
        <field name="name">lims.analysis.form (in lims)</field>
        <field name="model">lims.analysis</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" readonly="1" />
                </header>
                <sheet>
                    <!-- TODO -->
                    <div name="button_box" class="oe_button_box" />
                    <h1>
                        <label for="identifier" />
                        <field name="identifier" />
                    </h1>
                    <group>
                        <field name="sample_id" />
                        <field name="company_id" />
                        <field name="progress" widget="progressbar" />
                    </group>
                </sheet>
                <div class="oe_chatter" />
            </form>
        </field>
    </record>
    <record model="ir.ui.view" id="lims_analysis_search_view">
        <field name="name">lims.analysis.search (in lims)</field>
        <field name="model">lims.analysis</field>
        <field name="arch" type="xml">
            <search>
                <field name="identifier" />
            </search>
        </field>
    </record>
    <record model="ir.ui.view" id="lims_analysis_tree_view">
        <field name="name">lims.analysis.tree (in lims)</field>
        <field name="model">lims.analysis</field>
        <field name="arch" type="xml">
            <tree editable="bottom">
                <field name="identifier" invisible="1" />
                <field name="product_id" />
                <field
                    name="product_id"
                    context="{'default_laboratory_ok': True, 'default_sale_ok':False, 'default_purchase_ok':False}"
                    options="{'no_quick_create': true}"
                />
                <field name="name" />
                <field name="value" />
                <field name="uom_id" />
                <field name="state" force_save="1" />
                <field name="progress" widget="progressbar" />
                <field name="can_verify" invisible="1" />
                <button
                    name="analyze_action"
                    groups="lims.group_lims_analyst"
                    type="object"
                    icon="fa-check-square-o"
                    attrs="{'invisible': ['|', ('value', '=', False), ('state', '!=', 'to_analyze')]}"
                />
                <button
                    name="verify_action"
                    groups="lims.group_lims_verifier"
                    type="object"
                    icon="fa-check-circle-o"
                    attrs="{'invisible': ['|', ('can_verify', '=', False), ('state', '!=', 'to_be_verified')]}"
                />
                <button
                    name="retract_action"
                    groups="lims.group_lims_verifier"
                    type="object"
                    icon="fa-undo"
                    attrs="{'invisible': [('state', '!=', 'to_be_verified')]}"
                />
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="lims_analysis_act_window">
        <field name="name">Analysis</field>
        <field name="res_model">lims.analysis</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>
</odoo>
